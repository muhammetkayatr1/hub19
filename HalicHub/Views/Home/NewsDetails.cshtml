@await Html.PartialAsync("_Header")
<section class="blog_area p_120 single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="main_blog_details">
                    <img class="img-fluid" src="/img/@Model.News.Image" alt="">
                    <a href="#"><h4>@Model.News.Title</h4></a>
                    <div class="user_details">

                        @foreach (var item in Model.Categories)
                        {
                    <a style="background-color:#fff !important; padding:5px 15px 5px 15px;  color:black !important" asp-controller="Home" asp-action="ArticleList" asp-route-category="@item.Url">@item.Tittle</a>}
                        <div class="float-right">
                            <div class="media">
                                <div class="media-body">
                                    @foreach (var item in Model.Authors)
                                    {
                        <h5>@item.NameSurname</h5>}
                                    <p>@Model.News.Date</p>
                                </div>
                                <div class="d-flex">
                                    <img src="img/blog2/user-img.jpg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <p>@Html.Raw(Model.News.Content)</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    @foreach (var item in Model.Authors)
                    {
        <aside class="single_sidebar_widget author_widget">
            <img class="author_img rounded-circle" src="~/img/@item.Image" alt="">
            <h4><a asp-controller="Home" asp-action="AuthorDetails" asp-route-author="@item.Url">@item.NameSurname</a></h4>
            <p>@item.Description</p>
            <div class="br"></div>
        </aside>}

                </div>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("_Footer")